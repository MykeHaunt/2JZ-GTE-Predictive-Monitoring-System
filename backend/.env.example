# ========================================
#     2JZ-GTE Predictive Monitoring
#     Environment Configuration File
# ========================================

# === General ===
TZ=Asia/Dhaka

# === Logging ===
LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/backend.log         # Path to log file

# === ML Model ===
MODEL_PATH=model/model.pkl        # Path to trained model file
MODEL_TYPE=random_forest          # Model type used (e.g., xgboost, rf)

# === Sensor Ingestion ===
SENSOR_MODE=OBD                   # Options: OBD or CAN

# --- OBD-II Settings ---
OBD_PORT=/dev/ttyUSB0             # ELM327 port (Linux), COMx for Windows
OBD_BAUDRATE=9600
OBD_TIMEOUT=1.0

# --- CAN Bus Settings ---
CAN_INTERFACE=can0                # e.g., can0, slcan0
CAN_BUSTYPE=socketcan             # socketcan, slcan, etc.

# === Flask Server ===
FLASK_ENV=production              # development or production
DEBUG=False
HOST=0.0.0.0
PORT=5000

# === Security ===
SECRET_KEY=your-secure-random-secret-key

# === CORS ===
ALLOWED_ORIGINS=*                 # e.g., http://localhost:3000, https://myfrontend.com